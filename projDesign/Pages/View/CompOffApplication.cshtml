<!-- tab link end -->


<div class="col-xl-12">
    <div class="panel">
        <div class="card">
            <div class="card-body p-2">

                <div class="form-container master-panel">
                    <div class="col-md-12">
                        <h4>Compoff Application</h4><hr />
                    </div>
                    <div class="attendence-inner-panel">
                        <input type="hidden" id="hdn_totalrows" />
                        <div class="col-md-12" id="empselectiondiv">
                            <div class="col-md-6 form-group">
                                <div class="col-md-4"><label class="col-form-label">Company<i>*</i></label></div>
                                <div class="col-md-6">
                                    <select id="ddlCompany" class="form-control bg-ligth"><option value="0">--Please Select--</option></select>
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <div class="col-md-4"><label class="col-form-label">Employee Code</label></div>
                                <div class="col-md-6">
                                    <select id="ddlEmployeeCode" class="form-control bg-ligth labledropdown"><option value="0">--Please Select--</option></select>
                                </div>
                            </div>

                        </div>

                        <div class="col-md-12" id="empselectiondiv">
                            <div class="col-md-6 form-group">
                                <div class="col-md-4"><label class="col-form-label">Against Date<i>*</i></label></div>
                                <div class="col-md-6">
                                    <div id="divddlCompOffDate"><select id="ddlCompOffDate" class="form-control bg-ligth"><option value="0">--Please Select--</option></select></div>
                                    <div id="divdddlCompOffDate"><input type="text" disabled="disabled" class="ip-ap_2 form-control bg-ligth" id="dddlCompOffDate" /></div>
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <div class="col-md-4"><label class="col-form-label">CompOff Date<i>*</i></label></div>
                                <div class="col-md-6">
                                    <input type="text" class="ip-ap_2 form-control bg-ligth" id="txtCompOffDate" />
                                </div>
                            </div>

                        </div>
                        <div class="col-md-12" id="empselectiondiv">
                            <div class="col-md-6 form-group">
                                <div class="col-md-4"><label class="col-form-label">Remarks<i>*</i></label></div>
                                <div class="col-md-6">
                                    <textarea id="txtremarks" name="txtreamrks" placeholder="Remarks" style="width:720px" class="form-control bg-ligth"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group text-center">
                                <button type="button" class="btn btn-primary btn-lg" id="btnsave">Save</button>
                                <button type="button" class="btn btn-primary btn-lg" id="btnupdate">Update</button>
                                <button type="button" id="btnreset" class="btn btn-primary btn-lg">Reset</button>
                                @*<button type="button" class="btn btn-primary btn-lg" id="btnReport">Report</button>*@

                            </div>
                        </div>

                        <div class="col-md-12">
                            <hr />
                        </div>
                        <div class="col-md-12">
                            <h4 class="margin-top">CompOff Application List</h4>
                        </div>
                        <div class="col-md-12">
                            <div class="table-responsive no-margin">
                                <table id="tblCompOffApplication" class="table nowrap">
                                    <thead>
                                        <tr>
                                            <th>S.No.</th>
                                            <th>Employee</th>
                                            <th>Compoff Date</th>
                                            <th>Compoff Against Date</th>
                                            <th>Status</th>
                                            <th>Requester Remarks</th>
                                            <th>Approver Remarks</th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                                <div class="clear"></div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- form container end -->
            </div>


            <input type="hidden" id="hdnid" />

        </div>
    </div>
</div>


<script src="~/apiJS/View/JsCompOffApplication.js"></script>
<script src="~/Comman/JS/JsSelectAll.js"></script>
<script src="~/apiJS/View/JsApplicationLink.js"></script>





