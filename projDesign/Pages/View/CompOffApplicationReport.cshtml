@page
@{
    ViewData["Title"] = "CompOffApplication";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    .labeldropdown {
        border: none !important;
        background-color: #f5f5f5 !important;
        -webkit-appearance: none;
        pointer-events: none;
    }
</style>
@*@Html.Partial("PartialLayoutMeTab")*@
<!-- tab link end -->

<div class="col-xl-12">
    <div class="panel">
        <div class="card">
            <div class="card-body p-2">

                <div class="form-container master-panel">
                    <div class="col-md-12">
                        <h4>Compoff Application</h4><hr />
                    </div>
                    <div class="attendence-inner-panel">
                        <input type="hidden" id="hdn_totalrows" />
                        <div class="form-group">
                            <div id="pnlHeaderData"></div>

                        </div>
                        <div class="col-md-12">
                            <hr />
                        </div>
                        <div class="col-md-12">
                            <div class="form-group text-center">

                                <button type="button" class="btn btn-primary btn-lg" id="btnsave">Get</button>
                                <button type="button" id="btnreset" class="btn btn-primary btn-lg">Reset</button>


                            </div>
                        </div>

                    </div>

                    <div class="col-md-12">
                        <hr />
                    </div>
                    <div class="col-md-12">
                        <h4 class="margin-top">CompOff Application List</h4>
                    </div>

                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table id="tblCompOffApplication" class="table w-100 nowrap">
                                @*<thead>
                                    <tr>
                                        <th>S.No.</th>
                                        <th>Employee Code</th>
                                        <th>Employee Name</th>
                                        <th>Branch Name</th>
                                        <th>Department </th>
                                        <th>Designation </th>
                                        <th>Compoff Date</th>
                                        @*<th>In Time</th>
                                        <th>Out Time</th>
                                        <th>Compoff Against Date</th>
                                        <th>Status</th>
                                        <th>Remarks</th>
                                        <th>Application Date</th>
                                        <th>Approved By</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>*@
                            </table>
                            <div class="clear"></div>
                        </div>
                    </div>

                </div>
                <!-- form container end -->
            </div>


            <input type="hidden" id="hdnid" />

        </div>
    </div>
</div>
@section Scripts {
    <script src="~/apiJS/CommonJs.js"></script>
    <script>
        $(document).ready(function () {
            $("#pnlHeaderData").HR_HeaderData({
                // These are the defaults.
                haveFromDate: true,
                haveToDate: true,
                haveCompanyData: true,
                haveStateData: true,
                haveLocationData: true,
                haveDepartmentData: true,
                haveEmpData: true,
                haveSelectAll: true,
                havePleaseSelect: true,
            });

        });
    </script>
    <script src="~/Comman/JS/JsSelectAll.js"></script>
    <script src="~/apiJS/View/JsCompOffApplicationReport.js"></script>

}












