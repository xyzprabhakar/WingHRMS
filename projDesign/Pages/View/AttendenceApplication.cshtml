<div class="col-xl-12">
    <div class="panel">
        <div class="card">
            <div class="card-body p-2">

                <div class="form-container master-panel">
                    <div class="col-md-12">
                        <h4>Attendance Application</h4><hr />
                    </div>
                    <div class="attendence-inner-panel">
                        <input type="hidden" id="hdn_totalrows" />
                        <div class="col-md-12" id="empselectiondiv">
                            <div class="col-md-6 form-group">
                                <div class="col-md-4"><label class="col-form-label">Company<i>*</i></label></div>
                                <div class="col-md-6">
                                    <select id="ddlcompany" class="form-control bg-ligth"><option value="0">--Please Select--</option></select>
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <div class="col-md-4"><label class="col-form-label">Employee Code</label></div>
                                <div class="col-md-6">
                                    <select id="ddlEmployeeCode" class="form-control bg-ligth labledropdown"><option value="0">--Please Select--</option></select>
                                </div>
                            </div>

                        </div>

                        <div class="col-md-12" id="empselectiondiv">
                            <div class="col-md-6 form-group">
                                <div class="col-md-4"><label class="col-form-label">Regularize Date<i>*</i></label></div>
                                <div class="col-md-6">
                                    <input type="text" class="ip-ap_2 form-control bg-ligth" id="txtRegularizeDate" />
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <button type="button" class="btn btn-primary btn-lg" id="btnGetDetail" style="float: right;margin-right: 43%; margin-top: 1%;">Get Detail</button>

                            </div>

                        </div>
                        <div class="col-md-12" id="empselectiondiv">
                            <div class="col-md-6 form-group">
                                <div class="col-md-4"><label class="col-form-label">In Time<i>*</i></label></div>
                                <div class="col-md-6">
                                    <label id="lblInTime" class="col-form-label"></label>
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <div class="col-md-4"><label class="col-form-label">Out Time<i>*</i></label></div>
                                <div class="col-md-6">
                                    <label id="lblOutTime" class="col-form-label"></label>
                                </div>
                            </div>

                        </div>

                        <div class="col-md-12" id="empselectiondiv">
                            <div class="col-md-6 form-group">
                                <div class="col-md-4"><label class="col-form-label">New In Time<i>*</i></label></div>
                                <div class="col-md-6">
                                    <input type="text" class="date_and_time form-control bg-ligth" id="txtInTime" readonly>
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <div class="col-md-4"><label class="col-form-label">Out Time<i>*</i></label></div>
                                <div class="col-md-6">
                                    <input type="text" class="date_and_time form-control bg-ligth" id="txtOutTime" readonly>
                                </div>
                            </div>

                        </div>

                        @*<div class="col-md-12">
                                <div class="table-responsive no-margin">
                                    <table id="tblassetrqt" class="table nowrap w-100"></table>
                                    <div class="clear"></div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <hr />
                            </div>*@
                        <div class="col-md-12" id="empselectiondiv">
                            <div class="col-md-6 form-group">
                                <div class="col-md-4"><label class="col-form-label">Remarks</label></div>
                                <div class="col-md-6">
                                    <textarea id="txtremarks" name="txtreamrks" placeholder="Remarks" style="width:730px" class="form-control bg-ligth"></textarea>
                                </div>
                            </div>
                        </div>
                        @*<div class="col-md-12">
                                <hr />
                            </div>*@
                        @*<div class="col-md-6">
                                <div class="col-md-3 text-rigth"><label>Action<i>*</i></label></div>
                                <div class="col-md-6">
                                    <select id="ddlaction_type">
                                        <option value="0">--Select--</option>
                                        <option value="1">Approve</option>
                                        <option value="2">Reject</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="col-md-3 text-rigth"><label>Remarks</label></div>
                                <div class="col-md-6">
                                    <textarea id="txtremarks" placeholder="remark/comment.." maxlength="100" style="height:40px;resize:none;"></textarea>
                                </div>
                            </div>*@

                        <div class="col-md-12">
                            <div class="form-group text-center">

                                <button type="button" class="btn btn-primary btn-lg" id="btnsave">Save</button>
                                <button type="button" class="btn btn-primary btn-lg" id="btnupdate">Update</button>
                                <button type="button" id="btnreset" class="btn btn-primary btn-lg">Reset</button>
                                @*<button type="button" class="btn btn-primary btn-lg" id="btnReport">Report</button>*@
                            </div>
                        </div>


                        <div class="col-md-12">
                            <hr />
                        </div>
                        <div class="col-md-12">
                            <h4 class="margin-top">Pending Attendence Applications</h4>
                        </div>

                        <div class="col-md-12">
                            <div class="table-responsive no-margin">
                                <table id="tblAttendanceApplication" class="table nowrap">
                                    <thead>
                                        <tr>
                                            <th>S.No.</th>
                                            <th>Employee Code</th>
                                            <th>Employee Name</th>
                                            <th>Date</th>
                                            <th>In Time</th>
                                            <th>Out Time</th>
                                            <th>Requester Remarks</th>
                                            <th>System In Time</th>
                                            <th>System Out Time</th>
                                            <th>Status</th>
                                            @*<th>Approver Remarks</th>*@
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                                <div class="clear"></div>
                            </div>
                        </div>

                    </div>
                    <!-- form container end -->
                </div>


                <input type="hidden" id="hdnid" />

            </div>
        </div>
    </div>
