<div class="col-xl-12 mt-4">
    <div class="card">
        <div class="card-body">
            <div class="panel ">
                <h1>Leave Detail</h1>
                <hr />
                <div class="form-container leave no-top-margin">

                    <div class="col-md-12">
                        <div class="col-md-6 form-group">
                            <div class="col-md-4 text-rigth"><label>Employee</label></div>
                            <div class="col-md-8">
                                <select id="ddlEmployeeCode" class="form-control labeldropdown"></select>
                            </div>
                        </div>
                    </div>
                    <div class="clear"></div>
                    <div class="col-md-12">
                        <div class="col-md-6 form-group">
                            <div class="col-md-4 text-rigth"><label>Leave From Date</label></div>
                            <div class="col-md-8">
                                <input type="text" class="ip-ap flatpickr-input form-control" id="txtfromdate" readonly="readonly">
                            </div>
                        </div>
                        <div class="col-md-6 form-group">
                            <div class="col-md-4 text-rigth"><label>Leave To Date</label></div>
                            <div class="col-md-8">
                                <input type="text" class="ip-ap flatpickr-input form-control" id="txttodate" readonly="readonly">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 mt-4">
                        <div class="form-group text-center">
                            <button type="button" class="btn btn-primary btn-lg" id="btnGet">Get</button>
                            <button type="button" id="btnreset" class="btn btn-primary btn-lg">Reset</button>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table id="tblleavedetail" class="table w-100 nowrap"></table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script src="~/apiJS/View/JsLeaveDetail.js"></script>



@*When click on view than Modal Popup Open*@

<!-- Trigger/Open The Modal -->
<style>
          

</style>

<div id="myleaveModal" class="modal"  aria-labelledby="myleaveModal" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <!-- Modal content -->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myleaveModal">Leave Detail</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="form-container">
                    <div class="form-row">
                        <div class="col-md-6 form-group">
                            <div class="col-md-4"><label class="col-form-label">Employee Code </label></div>
                            <div class="col-md-8">
                                <input type="text" id="lblemployeecode" class="form-control" placeholder="Employee Code" disabled />

                            </div>
                        </div>
                        <div class="col-md-6 form-group">
                            <div class="col-md-4"><label class="col-form-label">Employee Name </label></div>
                            <div class="col-md-8">
                                <input type="text" id="lblrequester_empname" class="form-control" disabled placeholder="Employee Name" />
                            </div>
                        </div>

                        <div class="col-md-6 form-group">
                            <div class="col-md-4"><label class="col-form-label">Leave Type </label></div>
                            <div class="col-md-8">
                                <input type="text" id="lblleavetype" class="form-control" disabled placeholder="Leave Type" />
                            </div>
                        </div>


                        <div class="col-md-6 form-group">
                            <div class="col-md-4"><label class="col-form-label">Duration (Full/Half Day) </label></div>
                            <div class="col-md-8">
                                <input type="text" id="lbldaypart" class="form-control" disabled placeholder="Duraiton" />
                            </div>
                        </div>

                        <div class="col-md-6 form-group">
                            <div class="col-md-4"><label class="col-form-label">From Date </label></div>
                            <div class="col-md-8">
                                <input type="text" id="lblfromdate" class="form-control" disabled placeholder="From Date" />
                            </div>
                        </div>

                        <div class="col-md-6 form-group">
                            <div class="col-md-4"><label class="col-form-label">To Date </label></div>
                            <div class="col-md-8">
                                <input type="text" id="lbltodate" class="form-control" disabled placeholder="To Date" />
                            </div>
                        </div>

                        <div class="col-md-6 form-group">
                            <div class="col-md-4"><label class="col-form-label">Leave Quantity </label></div>
                            <div class="col-md-8">
                                <input type="text" id="lblleaveqty" class="form-control" disabled placeholder="Leave Quantity" />
                            </div>
                        </div>

                        <div class="col-md-6 form-group">
                            <div class="col-md-4"><label class="col-form-label">Reason </label></div>
                            <div class="col-md-8">
                                <input type="text" id="lblreason" class="form-control" disabled placeholder="Reason" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <hr />
                            <h2>Approver Details</h2>
                        </div>


                        <div class="col-md-12">

                            <h4 class="header-title mt-4 card-header mb-4">Admin</h4>

                        </div>
                        <div class="col-md-4 form-group">
                            <div class="col-md-4"><label class="col-form-label">Name </label></div>
                            <div class="col-md-8">
                                <input type="text" id="txtadmin_name" class="form-control" disabled placeholder="Admin Name" />
                            </div>
                        </div>

                        <div class="col-md-4 form-group">
                            <div class="col-md-4"><label class="col-form-label">Remarks </label></div>
                            <div class="col-md-8">
                                <input type="text" id="txtadmin_remarks" class="form-control" disabled placeholder="Admin Remarks" />
                            </div>
                        </div>

                        <div class="col-md-4 form-group">
                            <div class="col-md-4"><label class="col-form-label">Date </label></div>
                            <div class="col-md-8">
                                <input type="text" id="txtadmin_date" class="form-control" disabled placeholder="Admin Date" />
                            </div>
                        </div>


                        <div class="col-md-12">

                            <h4 class="header-title mt-4 card-header mb-4">Approver 1</h4>

                        </div>



                        <div class="col-md-4 form-group">
                            <div class="col-md-4"><label class="col-form-label">Name </label></div>
                            <div class="col-md-8">
                                <input type="text" id="lblapprover1_name" class="form-control" disabled placeholder="Approver 1 Name" />
                            </div>
                        </div>

                        <div class="col-md-4 form-group">
                            <div class="col-md-4"><label class="col-form-label">Remarks </label></div>
                            <div class="col-md-8">
                                <input type="text" id="tblapprover1_reamarks" class="form-control" disabled placeholder="Approver 1 Remarks" />
                            </div>
                        </div>

                        <div class="col-md-4 form-group">
                            <div class="col-md-4"><label class="col-form-label">Date </label></div>
                            <div class="col-md-8">
                                <input type="text" id="lblapprover1_date" class="form-control" disabled placeholder="Approver 1 Date" />
                            </div>
                        </div>


                        <div class="col-md-12">

                            <h4 class="header-title mt-4 card-header mb-4">Approver 2</h4>

                        </div>

                        <div class="col-md-4 form-group">
                            <div class="col-md-4"><label class="col-form-label">Name </label></div>
                            <div class="col-md-8">
                                <input type="text" id="lblapprover2_name" class="form-control" disabled placeholder="Approver 2 Name" />
                            </div>
                        </div>


                        <div class="col-md-4 form-group">
                            <div class="col-md-4"><label class="col-form-label">Remarks </label></div>
                            <div class="col-md-8">
                                <input type="text" id="lblapprover2_remarks" class="form-control" disabled placeholder="Approver 2 Remarks" />
                            </div>
                        </div>

                        <div class="col-md-4 form-group">
                            <div class="col-md-4"><label class="col-form-label">Date </label></div>
                            <div class="col-md-8">
                                <input type="text" id="lblapprover2_date" class="form-control" disabled placeholder="Approver 2 Date" />
                            </div>
                        </div>


                        <div class="col-md-12">

                            <h4 class="header-title mt-4 card-header mb-4">Approver 3</h4>

                        </div>
                        <div class="col-md-4 form-group">
                            <div class="col-md-4"><label class="col-form-label">Name </label></div>
                            <div class="col-md-8">
                                <input type="text" id="lblapprover3_name" class="form-control" disabled placeholder="Approver 3 Name" />
                            </div>
                        </div>

                        <div class="col-md-4 form-group">
                            <div class="col-md-4"><label class="col-form-label">Remarks </label></div>
                            <div class="col-md-8">
                                <input type="text" id="lblapprover3_remarks" class="form-control" disabled placeholder="Approver 3 Remarks" />
                            </div>
                        </div>

                        <div class="col-md-4 form-group">
                            <div class="col-md-4"><label class="col-form-label">Date </label></div>
                            <div class="col-md-8">
                                <input type="text" id="lblapprover3_date" class="form-control" disabled placeholder="Approver 3 Date" />
                            </div>
                        </div>



                    </div>

                </div>


            </div>
        </div>
    </div>
</div>

<script>

    var modal = document.getElementById("myleaveModal");
    window.onclick = function (event) {
        if (event.target == modal) {
            $('#myleaveModal').modal({
                
                show: false
            })
            $("#lblemployeecode").val('');
            $("#lblrequester_empname").val('');
            $("#lblleavetype").val('');
            $("#lbldaypart").val('');
            $("#lblfromdate").val('');
            $("#lbltodate").val('');
            $("#lblleaveqty").val('');
            $("#lblreason").val('');
            $("#lblapprover1_name").val('');
            $("#tblapprover1_reamarks").val('');
            $("#lblapprover2_name").val('');
            $("#lblapprover2_remarks").val('');
            $("#lblapprover3_name").val('');
            $("#lblapprover3_remarks").val('');
            $("#lblapprover1_date").val('');
            $("#lblapprover2_date").val('');
            $("#lblapprover3_date").val('');

            $("#txtadmin_name").val('');
            $("#txtadmin_remarks").val('');
            $("#txtadmin_date").val('');
        }
    }
</script>
