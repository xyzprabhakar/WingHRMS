@page
@{
    ViewData["Title"] = "outdoorApplication";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    .labledropdown {
        border: none !important;
        background-color: #f5f5f5 !important;
        -webkit-appearance: none;
        pointer-events: none;
    }
</style>


@*@Html.Partial("PartialLayoutMeTab")*@

<div class="col-xl-12 mt-4">
    <div class="card">
        <div class="card-body">
            <div class="panel attendence-master-panel no-top-margin">
                <h1>Outdoor Application</h1>
                <hr />
                <div class="form-container">
                    <div class="attendence-inner-panel">

                        <div class="clear"></div>

                        <div class="col-md-6 form-group">
                            <div class="col-md-4 text-rigth"><label>Company</label></div>
                            <div class="col-md-8">
                                <select id="ddlCompany" class="form-control">
                                    @*<option>All</option>*@
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 form-group">
                            <div class="col-md-4"><label>Employee Code </label></div>
                            <div class="col-md-8"> <select id="ddlEmployeeCode" class="form-control labledropdown"></select></div>
                        </div>
                        <div class="clear"></div>
                        <div class="table-responsive">
                            <table class="table-attendece-root table w-100 nowrap" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>From Time</th>
                                        <th>To Time</th>
                                        <th>Reason</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><input type="text" class="date_for_outdoor form-control" id="txtDate" /></td>
                                        <td>
                                            @*<input type="text" class="iphr" id="txtInTime" autocomplete="off" class="AnyTimePicker" readonly>*@
                                            <input type="text" id="txtInTime" autocomplete="off" class="AnyTimePicker form-control" readonly>
                                        </td>
                                        <td>
                                            @*<input type="text" class="iphr" id="txtOutTime" readonly>*@
                                            <input type="text" id="txtOutTime" autocomplete="off" class="AnyTimePicker form-control" readonly>
                                        </td>
                                        <td>
                                            <input type="text" class="form-control" id="Reason">
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                        <!--table responsive end-->

                        <div class="col-md-12 mt-4">

                            <div class="form-group text-center">
                                <button type="button" class="btn btn-primary btn-lg" id="btnsave">Save</button>
                                <button type="button" class="btn btn-primary btn-lg" id="btnupdate">Update</button>
                                <button type="button" id="btnreset" class="btn btn-primary btn-lg">Reset</button>
                                @*<button type="button" class="btn btn-primary btn-lg" id="btnReport">Report</button>*@
                            </div>
                        </div>

                        <div class="col-md-12">
                            <h4 class="margin-top">Pending Outdoor Application List</h4><hr />
                        </div>


                        <div class="col-md-12">
                            <div class="table-responsive no-margin">
                                <table id="tblOutdoorApplication" class="table nowrap w-100"></table>

                            </div>
                        </div>



                        <!-- attendence inner panel end-->
                    </div>
                    <!-- form container end -->
                </div>
                <!-- panel end -->
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="hdnid" />

<script src="~/Comman/JS/JsSelectAll.js"></script>
<script src="~/apiJS/View/JsOutdoorApplication.js"></script>
<script src="~/apiJS/View/JsApplicationLink.js"></script>
