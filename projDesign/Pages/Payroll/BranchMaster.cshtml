@page
@{
    ViewData["Title"] = "BranchMaster";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="col-xl-12">
    <div class="panel ">

        <div class="card mt-3">
            <div class="card-body">

                <div class="form-container master-panel">
                    <div class="col-md-12">
                        <h4>Branch Master</h4><hr />
                    </div>
                    <div class="col-md-6 form-group">
                        <div class="col-md-4"><label class="col-form-label">Bank<i>*</i></label></div>
                        <div class="col-md-6">
                            <select id="bank" class="form-control">
                                <option value="0">--Please Select--</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6 form-group">
                        <div class="col-md-4"><label class="col-form-label">Branch Name<i>*</i></label></div>
                        <div class="col-md-6">
                            <input type="text" id="branchname" maxlength="50" class="form-control" placeholder="Branch Name" />
                        </div>
                    </div>

                    <div class="col-md-6 form-group">
                        <div class="col-md-4"><label class="col-form-label">Branch Location<i>*</i></label></div>
                        <div class="col-md-6">
                            <input type="text" id="branchloc" maxlength="100" class="form-control" placeholder="Branch Location" />
                        </div>
                    </div>

                    <div class="col-md-6 form-group">
                        <div class="col-md-4"><label class="col-form-label">IFSC Code<i>*</i> </label></div>
                        <div class="col-md-6">
                            <input type="text" id="ifsccode" maxlength="8" class="form-control" placeholder="IFSC Code" onkeydown="OnlyNumeric(event);" />
                        </div>
                    </div>


                    <div class="col-md-6 form-group" id="checkbtn">
                        <div class="col-md-4"><label class="col-form-label">Status<i>*</i></label></div>
                        <div class="col-md-6">
                            <div class="form-check-inline my-1">
                                <div class="custom-control custom-radio">
                                    <input class="custom-control-input" id="is_active" type="radio" value="1" name="chkstatus">
                                    <label class="custom-control-label" for="is_active">  Active</label>
                                </div>
                            </div>
                            <div class="form-check-inline my-1">
                                <div class="custom-control custom-radio">
                                    <input class="custom-control-input" id="is_in_active" type="radio" value="0" name="chkstatus">
                                    <label class="custom-control-label" for="is_in_active">  Inactive</label>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-12">
                        <hr />
                        <div class="form-group text-center">
                            <div class=" btn-group">
                                <button type="button" class="btn btn-primary btn-lg" id="btnsave">Save</button>
                                <button type="button" class="btn btn-primary btn-lg" id="btnupdate">Update</button>
                                <button type="button" id="btnreset" class="btn btn-primary btn-lg">Reset</button>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <h4 class="margin-top">Branch List</h4><hr />
                    </div>


                    <div class="col-md-12">
                        <div class="table-responsive no-margin">
                            <table id="tblBranchmaster" class="table nowrap w-100">
                                <thead>
                                    <tr>
                                        <th>S.No.</th>
                                        <th>Bank Name</th>
                                        <th>Branch Name</th>
                                        <th>Branch Location</th>
                                        <th>IFSC Code</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>

                        </div>
                    </div>

                </div>


            </div>
        </div>
    </div>
</div>



<input type="hidden" id="hdnid" />
<script src="~/apiJS/Payroll/BranchMaster.js?ver=@DateTime.Now.Ticks.ToString()"></script>
<script src="~/Comman/JS/CommanJS.js?ver=@DateTime.Now.Ticks.ToString()"></script>
