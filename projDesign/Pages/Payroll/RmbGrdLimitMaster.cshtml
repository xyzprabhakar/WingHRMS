@page
@{
    ViewData["Title"] = "RmbGrdLimitMaster";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


@*<div> @Html.Partial("_ReimbursementLayout")</div>*@

<div class="col-xl-12">
   
    <div class="panel ">
        @Html.Partial("_ReimbursementLayout")
        <div class="card mt-3">
            <div class="card-body">

                <div class="form-container leave no-top-margin not-res">
                    <div class="col-md-12 mt-4">
                        <div class="tab btn-group btn-block">
                            <button class="tablinks  btn btn-primary text-light col-6 " onclick="openCity(event, 'tab1')"> Reimbursement Grade Limit Master Entry</button>
                            <button id="tab2_btn" class="tablinks btn btn-outline-light col-6" onclick="openCity(event, 'tab2')"> Reimbursement Grade Limit Master Report</button>

                        </div>
                    </div>

                    <div class="col-md-12 mt-4">
                        <div id="tab1" class="tabcontent" style="display: block;">
                            <div class="slider-wrap" style="width: auto; height: auto;">
                                <div class="col-md-12">
                                    <h4>Reimbursement Grade Limit master</h4>
                                    <hr />
                                </div>

                                <div class="col-md-6 form-group">
                                    <div class="col-md-4"><label class="col-form-label">Company<i>*</i></label></div>
                                    <div class="col-md-6">
                                        <select id="ddlCompany" class="form-control bg-light">
                                            <option value="0">--Please Select--</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6 form-group">
                                    <div class="col-md-4"><label class="col-form-label">Employee Name<i>*</i></label></div>
                                    <div class="col-md-6">
                                        <select id="ddlEmployee" class="form-control">
                                            <option value="0">--Please Select--</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-6 form-group">
                                    <div class="col-md-4"><label class="col-form-label">Grade Name<i>*</i></label></div>
                                    <div class="col-md-6">
                                        <select id="ddlGrade" class="form-control">
                                            <option value="0">--Please Select--</option>
                                        </select>
                                    </div>
                                </div>


                                <div class="col-md-6 form-group">
                                    <div class="col-md-4"><label class="col-form-label">Fiscal Year<i>*</i></label></div>
                                    <div class="col-md-7">
                                        <input type="text" id="txtfiscal" maxlength="8" class="form-control" placeholder="Fiscal Year" readonly onkeydown="OnlyNumeric(event);" />
                                    </div>
                                </div>

                                <div class="col-md-6 form-group">
                                    <div class="col-md-4"><label class="col-form-label">Monthly limit<i>*</i></label></div>
                                    <div class="col-md-6">
                                        <input type="text" id="txtMonthly" maxlength="8" class="form-control" placeholder="Monthly Limit" onkeydown="OnlyNumeric(event);" />
                                    </div>
                                </div>

                                <div class="col-md-6 form-group">
                                    <div class="col-md-4"><label class="col-form-label">Yearly Limit<i>*</i> </label></div>
                                    <div class="col-md-7">
                                        <input type="text" id="txtYearly" maxlength="8" class="form-control" placeholder="Yearly Limit" onkeydown="OnlyNumeric(event);" />
                                    </div>
                                </div>

                                <div class="col-md-6 form-group">
                                    <div class="col-md-4"><label class="col-form-label">Is Active<i>*</i></label></div>
                                    <div class="col-md-6">
                                        <select id="ddlActive" class="form-control">
                                            <option value="2">--Please Select--</option>
                                            <option value="1">Active</option>
                                            <option value="0">De-Active</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <hr />
                                    <div class="form-group text-center">

                                        <button type="button" class="btn btn-primary btn-lg" id="btnsave">Save</button>
                                        <button type="button" class="btn btn-primary btn-lg" id="btnupdate">Update</button>
                                        <button type="button" id="btnreset" class="btn btn-primary btn-lg">Reset</button>

                                    </div>

                                </div>


                                <div class="col-md-12">
                                    <hr />
                                    <h4 class="margin-top">Reimbursement Category List</h4>
                                </div>

                                <div class="col-md-12">
                                    <div class="table-responsive">
                                        <table id="tblCategory" class="table nowrap w-100">
                                            <thead>
                                                <tr>
                                                    <th>S.No.</th>
                                                    <th>Category ID</th>
                                                    <th>Category Name</th>
                                                    <th>Monthly limit</th>
                                                    <th>Yearly Limit</th>

                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                        <div class="clear"></div>
                                    </div>
                                </div>
                                <div class="clear"></div>
                            </div>

                        </div>
                        <!-- first tab end -->

                        <div id="tab2" class="tabcontent" style="display: none;">

                            <div class="slider-wrap">
                                <div class="slider" id="slider2">
                                    <div class="col-md-12">
                                        <h4>Reimbursement Grade Limit Report</h4>
                                        <hr />
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="col-md-12">
                                        <div class="table-responsive no-margin">
                                            <table id="tblGradeLimit" class="table nowrap no-margin w-100">
                                                <thead>
                                                    <tr>
                                                        <th>S.No.</th>
                                                        <th>Grade Name</th>
                                                        <th>Employee Code</th>
                                                        <th>Fiscal Year</th>
                                                        <th>Monthly Limit</th>
                                                        <th>Yearly Limit</th>
                                                        <th>Active Status</th>
                                                        <th>Category Details</th>
                                                        <th>Edit</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                            <div class="clear"></div>
                                        </div>
                                    </div>

                                    <div class="slider-wrap" style="width: auto; height: auto;">
                                        <div class="clear"></div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>

                <div class="clear"></div>
            </div>
        </div>
    </div>
</div>



<input type="hidden" id="hdnCategory" />
<script src="~/apiJS/Payroll/JsReimbursementGradeLimitMaster.js?ver=@DateTime.Now.Ticks.ToString()"></script>
<script src="~/Comman/JS/CommanJS.js?ver=@DateTime.Now.Ticks.ToString()"></script>


<!-- Trigger/Open The Modal -->
<style>

    /* The Modal (background) */
    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        padding-top: 100px; /* Location of the box */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
    }

    /* Modal Content */
    .modal-content {
        background-color: #fefefe;
        margin: auto;
        padding: 10px;
        border: 1px solid #888;
        width: 30%;
    }
</style>
<!-- The Modal -->
<div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content" style="width:600px;height:400px">
        <div class="table-responsive no-margin">
            <table id="tblcategoryList" class="table-defoult no-margin">
                <thead>
                    <tr>
                        <th>S.No.</th>
                        <th>Category id</th>
                        <th>Category Name</th>
                        <th>Monthly Limit</th>
                        <th>Yearly Limit</th>


                    </tr>
                </thead>
                <tbody></tbody>
            </table>
            <div class="clear"></div>
        </div>
    </div>

</div>
<script>

    var modal = document.getElementById("myModal");

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>