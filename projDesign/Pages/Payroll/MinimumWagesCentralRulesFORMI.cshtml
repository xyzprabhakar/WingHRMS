                                <select id="ddlemp" class="form-control bg-light"><option value="0">--Please Select--</option></select>
                            </div>
                        </div>
                        <div class="col-md-6 form-group">
                            <div class="col-md-4 text-rigth"><label class="col-form-label">Father's / Husband's Name</label></div>
                            <div class="col-md-6">
                                <input id="txt_fatherorhusbandname" type="text" class="form-control bg-light" autocomplete="off" placeholder="Father's / Husband's Name" />
