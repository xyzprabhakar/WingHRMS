@page
@{
    ViewData["Title"] = "AssignRoleMenu";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="col-xl-12">
    <div class="panel ">
        <div class="card">
            <div class="card-body p-2">

                <div class="form-container master-panel">
                    <div class="col-md-12">
                        <h4>Assign DashBoard Menus</h4>
                        <hr />
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-form-label">Select Role<i>*</i></label>
                            <select id="ddlemp_role" class="form-control">
                                <option value="0">--Please Select--</option>
                            </select>
                        </div>
                    </div>


                    <div class="clear"></div>
                    <div class="col-md-12">
                        <h4 class="margin-top">Assign Dashboard Menus</h4>
                    </div>

                    <div class="col-md-12">
                        <div class="table-responsive no-margin">
                            <table id="bindmenumaster" class="table nowrap w-100"></table>
                            <div class="clear"></div>
                        </div>
                    </div>
                    <div class="clear"></div>

                    <div class="col-md-12">
                        <div class="form-group text-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary btn-lg" id="btnsave">Save</button>
                                <button type="button" id="btnreset" class="btn btn-primary btn-lg">Reset</button>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
                   <input type="hidden" id="hdn_role_menu_id" />
        </div>
    </div>
</div>


<script src="~/Comman/JS/CommanJS.js?ver=@DateTime.Now.Ticks.ToString()"></script>
<script src="~/apiJS/Masters/AssignRoleMenu.js?ver=@DateTime.Now.Ticks.ToString()"></script>

