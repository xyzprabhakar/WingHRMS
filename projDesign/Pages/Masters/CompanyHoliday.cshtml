                <div class="form-container master-panel">
                    <div class="col-md-12">
                        <h4>Company Holiday</h4>
                        <hr />
                    </div>
                    <div class=" col-md-6">
                        <div class="form-group">
                            <label asp-for="description" class="col-form-label">Company<i>*</i></label>
                            <select multiple="multiple" id="ddlcompany" class="form-control">
                                <option value="0">--Select--</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 ">
                        <div class="form-group">
                            <label class="col-form-label">Location<i>*</i></label>
                            <select multiple="multiple" id="ddllocation" class="form-control">
                                <option value="0">-Select-</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6 ">
                        <div class="form-group">
                            <label asp-for="machinenumber" class="col-form-label">Holiday Name<i>*</i></label>
                            <input id="txtHolidayName" type="text" maxlength="50" class="form-control" autocomplete="off" placeholder="Holiday Name" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-form-label">From Date<i>*</i></label>
                                    <input type="text" class="ip-ap form-control" id="txtFromDate" readonly>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-form-label">To Date<i>*</i></label>
                                    <input type="text" class="ip-ap form-control" id="txtToDate" readonly>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-6 " style="display:none">
                        <div class="form-group">
                            <label asp-for="machinetype" class="col-form-label">Holiday Date<i>*</i></label>
                            <input type="text" class="ip-ap form-control" id="txtHolidayDate" />
                        </div>
                    </div>

                    <div class="col-md-6 ">
                        <div class="form-group">
                            <label asp-for="description" class="col-form-label">Applicable To<i>*</i></label>
                            <select multiple="multiple" id="ddlemployeetype" class="form-control">
                                <option value="0">--Select--</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 ">
                        <div class="form-group">
                            <label asp-for="description" class="col-form-label">Religion<i>*</i></label>
                            <select id="ddlReligion" class="form-control">
                                <option value="0">--Select--</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-12 form-inline">
                        <label class=" col-form-label mr-3">Status</label>
                        <div class="">
                            <div class="form-check-inline my-1">
                                <div class="custom-control custom-radio">
                                    <input class="custom-control-input" id="is_active" type="radio" checked="checked" value="active" name="Status">
                                    <label class="custom-control-label" for="is_active">  Active</label>
                                </div>
                            </div>
                            <div class="form-check-inline my-1">
                                <div class="custom-control custom-radio">
                                    <input class="custom-control-input" id="is_in_active" type="radio" value="Inactive" name="Status">
                                    <label class="custom-control-label" for="is_in_active" name="Status">  Inactive</label>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group text-center">
                            <div class=" btn-group">
                                <button type="button" class="btn btn-primary btn-lg" id="btnsave">Save</button>
                                <button type="button" class="btn btn-light btn-lg" id="btnupdate">Update</button>
                                <button type="button" id="btnreset" class="btn btn-light btn-lg">Reset</button>
                            </div>
                        </div>
                    </div>




                    <div class="col-md-12">
                        <h4 class="mt-4">Holiday List</h4>
                        <hr />
                    </div>

                    <div class="col-md-12">
                        <div class="table-responsive no-margin">
                            <table id="tblCompanyholiday" class="table nowrap"></table>
                            <div class="clear"></div>
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
</div>

