@page
@{
    ViewData["Title"] = "AddDesignationMaster";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="col-xl-12">
    <div class="panel ">
        <div class="card ">
            <div class="card-body">
                <h1>Add Designation Master</h1>
                <hr />
                <!--  <div class="text-rigth">
                    <a href="/Masters/AddGradeMaster" class="addBTN">Add Grade <span class="fa fa-plus"></span></a>
                </div>
                  -->
               
                    <div class="row">
                        <div class="col-md-6">


                            <div class="form-group">
                                <label class="col-form-label" for="txtdesignation">Designation<i>*</i></label>
                                <input id="txtdesignation" type="text" class="form-control col-lg-6" autocomplete="off" placeholder="Designation Name" onkeypress="return AllowDotAlphaNumeric(event);" />
                            </div>
                            <div class="form-group form-inline">
                                <label class=" mr-4 col-form-label">Status</label>
                                <div class="">
                                    <div class="form-check-inline my-1">
                                        <div class="custom-control custom-radio">
                                            <input class="custom-control-input" id="is_active" type="radio" value="1" name="chkstatus">
                                            <label class="custom-control-label" for="is_active">  Active</label>
                                        </div>
                                    </div>
                                    <div class="form-check-inline my-1">
                                        <div class="custom-control custom-radio">
                                            <input class="custom-control-input" id="is_in_active" type="radio" value="0" name="chkstatus">
                                            <label class="custom-control-label" for="is_in_active">  Inactive</label>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class=" btn-group">
                                <button type="button" class="btn btn-primary btn-lg" id="btnsave">Save</button>
                                <button type="button" class="btn btn-primary btn-lg" id="btnupdate">Update</button>
                                <button type="button" id="btnreset" class="btn btn-light btn-lg">Reset</button>
                            </div>
                        </div>





                        <div class="col-md-12">
                            <hr />
                            <h2 class="margin-top">Designation Master List</h2>
                            <div class="table-responsive no-margin">
                                <table id="tbldesignation" class="table w-100">
                                    <thead>
                                        <tr>
                                            <th>S.No.</th>
                                            <th>Designation Name</th>
                                            <th>Status</th>
                                            @*<th>Created By</th>*@
                                            <th>Created On</th>
                                            <th>Modified On</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                                <div class="clear"></div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>




<input type="hidden" id="hdnid" />

<link href="~/datatable/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<script src="~/datatable/js/dataTables.bootstrap.min.js"></script>
<script src="~/datatable/js/jquery.dataTables.js"></script>
<script src="~/Comman/JS/CommanJS.js?ver=@DateTime.Now.Ticks.ToString()"></script>
<script src="~/apiJS/Masters/DesignationMaster.js?ver=@DateTime.Now.Ticks.ToString()"></script>


