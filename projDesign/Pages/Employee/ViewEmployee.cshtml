@page
@{
    ViewData["Title"] = "ViewEmployee";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="col-xl-12">
    <div class="panel">
        <div class="card">
            <div class="card-body ">

                <div class="panel">
                    <h1>Employee List</h1>
                    <hr />

                    <div class="col-md-2 text-center">
                        <label class="col-form-label">Employee Type<i>*</i></label>
                    </div>
                    <div class="col-md-4 text-center">
                        <select id="ddlEmpType" class="form-control">
                            <option value="1" selected="selected">Active</option>
                            <option value="0">InActive</option>
                        </select>
                    </div>

                    <div class="table-responsive no-margin">
                        <table id="tblEmployee" class="table nowrap w-100 "></table>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/apiJS/Employee/JsView.js?ver=@DateTime.Now.Ticks.ToString()"></script>