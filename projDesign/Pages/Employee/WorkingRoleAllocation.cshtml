@page
@{
    ViewData["Title"] = "WorkingRoleAllocation";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="col-xl-12">
    <div class="panel ">
        @Html.Partial("_PartialEmpLayout")

        <div class="card mt-3">
            <div class="card-body">
                <div class="form-container master-panel">
                    <div class="col-md-12">
                        <h4>Working Role Allocation</h4><hr />
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-form-label">Company<i>*</i></label>
                            <select id="ddlCompany" class="form-control bg-light">
                                <option value="0">--Please Select--</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-form-label">Employee Code<i>*</i></label>
                            <select id="ddlEmployeeCode" class="form-control"><option value="0">--Please Select--</option></select>
                        </div>
                    </div>


                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-form-label">Working Role<i>*</i></label>
                            <select id="ddl_working_role" class="form-control"><option value="0">--Please Select--</option></select>
                        </div>
                    </div>


                    <div class="col-md-12 text-center">
                        <hr />
                        <button class="btn btn-primary waves-effect waves-light" id="btnSaveWorkingRoleAllocation">Save</button>
                    </div>

                    <div class="clear"></div>

                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Comman/JS/CommanJS.js?ver=@DateTime.Now.Ticks.ToString()"></script>
<script src="~/apiJS/Employee/JsWorkingRoleAllocation.js?ver=@DateTime.Now.Ticks.ToString()"></script>
<script src="~/Comman/JS/JsSelectAll.js?ver=@DateTime.Now.Ticks.ToString()"></script>
