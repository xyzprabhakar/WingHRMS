@page
@{
    ViewData["Title"] = "MaintainDocument";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<link href="~/css/DisplayOnly.css" rel="stylesheet" />

<div class="col-xl-12">
    <div class="panel ">
        @Html.Partial("PartialEmpProfileLayout")

        <div class="card mt-3">
            <div class="card-body">

                <div class="form-container master-panel">
                    <div class="col-md-12">
                        <h4>Maintain Documents</h4><hr />
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-form-label">Company<i>*</i></label>
                            <select id="ddlCompany" class="form-control bg-light" disabled></select>
                        </div>
                    </div>


                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-form-label">Employee<i>*</i></label>
                            <select id="ddlEmployeeCode" class="form-control" disabled>
                                
                            </select>
                        </div>
                    </div>


                    <div class="col-md-12">
                        <div class="table-responsive no-margin">
                            <table id="tblempdocuments" class="table nowrap w-100"></table>
                            <div class="clear"></div>
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>

            </div>
        </div>
    </div>
</div>
<script src="~/apiJS/EmployeeProfile/JsMaintainDocuments.js?ver=@DateTime.Now.Ticks.ToString()"></script>

