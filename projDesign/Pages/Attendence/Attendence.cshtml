    .fc-event {
        border: none !important;
        border-color: none !important;
        background-color: none !important;
    }

    .fc-day-grid-event {
        margin: 1px 1px 0px;
        padding: 0px 0px;
    }
</style>
<div class="tab-link">
    <ul>
        @*
        <li><a href="#">Opening</a></li>
        <li><a href="#">On-boarding</a></li>
        <li><a href="#">Shift Allocation</a></li>*@
        <li class="active"><a href="Attendence">Leave & Attendence</a></li>
        <li><a href="/Payroll/SalarySlips">Salary Slips</a></li>
        <li><a href="/Leave/LeaveBalance">Balance Leave</a></li>
        <li><a href="/payroll/LoanRequest">Loan Request</a></li>
        @*
        <li><a href="/payroll/ReimbursementRequestMaster">Reimbursement Request</a></li>*@
        <li><a href="/payroll/AssetRequest">Asset Request</a></li>
