@page
@{
    ViewData["Title"] = "Attendance Monthly Report";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<style>
    .ui-datepicker-calendar {
        display: none;
    }
</style>

<div class="col-xl-12">
    <div class="panel">
        <div class="card">
            <div class="card-body ">

                <div class="panel">
                    <h1>Attendance Monthly Report</h1>
                    <hr />

                    <div class="form-container">
                        <div class="attendence-inner-panel">

                            <div class="form-container leave">
                                <div class="col-md-12">

                                    <div class="form-group">
                                        <div id="pnlHeaderData">
                                            <div class="col-md-6">
                                                <div class="col-md-4">
                                                    <label class="col-form-label">Month</label>
                                                </div>
                                                <div class="col-md-6">
                                                    <input type="month"  class="form-control" id="txtMonthYear" >
                                                </div>                                               
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group text-center">
                                        <button type="button" class="btn btn-primary btn-lg" id="btnsave">Get</button>
                                        <button type="button" id="btnreset" class="btn btn-primary btn-lg">Reset</button>
                                    </div>
                                </div>

                                <h2 class="margin-top">Attendance Monthly Report</h2>
                                <hr />
                                <div class="col-md-12">
                                    <div class="table-responsive">

                                        <table id="tblleaveapp" class="table w-100 nowrap"></table>

                                        <div class="clear"></div>

                                    </div>
                                </div>

                                <div class="clear"></div>
                            </div>
                            <!-- attendence inner panel end-->
                        </div>
                        <!-- form container end -->
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/apiJS/CommonJs.js"></script>
    <script>
        $(document).ready(function () {
            $("#pnlHeaderData").HR_HeaderData({
                // These are the defaults.
                haveFromDate: false,
                haveToDate: false,
                haveCompanyData: true,
                haveStateData: false,
                haveLocationData: true,
                haveDepartmentData: true,
                haveEmpData: true,
                haveSelectAll: true,
                havePleaseSelect: true,
            });
         
        });
    </script>
    <script src="~/apiJS/Reports/JSAttendanceMonthlyReport.js"></script>

}
